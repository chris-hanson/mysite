<%= form_for(portfolio_item) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_field :body %>
  </div>

  <div class="field">
    <%= f.label :main_image %>
    <%= f.file_field :main_image %>
  </div>

  <div class="field">
    <%= f.label :thumb_image %>
    <%= f.file_field :thumb_image %>
  </div>

  <ul>
    <%= f.fields_for :technologies do |tf| %>
      <li>
        <%= tf.label :name %>
        <%= tf.text_field :name %>
      </li>
    <% end %>
  </ul>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>