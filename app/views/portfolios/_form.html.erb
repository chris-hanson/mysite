<%= form_for(portfolio_item) do |f| %>
  <% if portfolio_item.errors.any? %>
    <% portfolio_item.errors.full_messages.each do |message| %>
      <%= js add_gritter(message) %>
    <% end %>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_field :body %>
  </div>

  <div class="field">
    <%= f.label :main_image %>
    <%= f.file_field :main_image %>
  </div>

  <div class="field">
    <%= f.label :thumb_image %>
    <%= f.file_field :thumb_image %>
  </div>

  <div class="field">
    <%= f.fields_for :technologies do |tf| %>
      <%= render 'technology_fields', f: tf %>
    <% end %>

    <%= link_to_add_association 'Add Tech', f, :technologies %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>