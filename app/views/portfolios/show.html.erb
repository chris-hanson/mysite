<div class="js-portfolio-modal portfolio-item-content">
  <div class="row">
    <div class="col-sm-7 portfolio-item-content__image">
      <% unless @portfolio_item.main_image.url.nil? %>
        <%= image_tag @portfolio_item.main_image.url %>
      <% end %>
    </div>

    <div class="col-sm-5 portfolio-item-content__text">
      <h1><%= @portfolio_item.title %></h1>

      <em class="subtitle"><%= @portfolio_item.subtitle %></em>

      <p><%= @portfolio_item.body %></p>

      <% if @portfolio_item.technologies.any? %>
        <h4>Technology used</h4>
        <% @portfolio_item.technologies.each do |t| %>
          <p><%= t.name %></p>
        <% end %>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <%= link_to 'Edit', edit_portfolio_path(@portfolio_item.id) %>
      <% end %>
    </div>
  </div>
</div>

