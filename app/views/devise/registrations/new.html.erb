<div class="layout-container panel">
  <h1>Sign up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= devise_error_messages! %>

    <fieldset>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "enter email address" %>
      </div>

      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "enter full name" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "enter password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "enter password confirmation" %>
      </div>
    </fieldset>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn -block -primary' %>
    </div><br>
  <% end %>

  Already have an account? <%= link_to "Log in here", new_session_path(resource_name) %>
</div>